<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AddonLocalizer.PageModels"
             x:Class="AddonLocalizer.Pages.LocalizationDetailPage"
             x:DataType="vm:LocalizationDetailPageModel"
             Title="Localization Details"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageBackgroundLight}, Dark={StaticResource PageBackgroundDark}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Glue String -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                    Background="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                    Padding="20"
                    StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Glue String"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    <Label Text="{Binding Entry.GlueString}"
                           FontFamily="Consolas"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Statistics -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                    Background="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                    Padding="20"
                    StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Statistics"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="20" RowSpacing="8">
                        
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Occurrences:" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="{Binding Entry.OccurrenceCount}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="Has Concatenation:" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                        <Label Grid.Row="1" Grid.Column="1" 
                               Text="{Binding Entry.HasConcatenation}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                        <Label Grid.Row="2" Grid.Column="0" 
                               Text="Used in String.format:" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                        <Label Grid.Row="2" Grid.Column="1" 
                               Text="{Binding Entry.UsedInStringFormat}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                        <Label Grid.Row="3" Grid.Column="0" 
                               Text="Parameter Count:" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                        <Label Grid.Row="3" Grid.Column="1" 
                               Text="{Binding Entry.ParameterCount}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Format Parameters -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                    Background="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                    Padding="20"
                    StrokeShape="RoundRectangle 10"
                    IsVisible="{Binding Entry.ParameterCount, Converter={StaticResource IsGreaterThanZeroConverter}}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Format Parameters"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    <Label Text="{Binding ParameterDetails}"
                           FontFamily="Consolas"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                </VerticalStackLayout>
            </Border>

            <!-- File Locations -->
            <Border StrokeThickness="1"
                    Stroke="{AppThemeBinding Light={StaticResource CardBorderLight}, Dark={StaticResource CardBorderDark}}"
                    Background="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
                    Padding="20"
                    StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="File Locations"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    <Label Text="{Binding LocationDetails}"
                           FontFamily="Consolas"
                           FontSize="12"
                           LineBreakMode="WordWrap"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Back Button -->
            <Button Text="Back to List"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                    TextColor="{AppThemeBinding Light=White, Dark={StaticResource PrimaryDarkText}}"
                    Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
